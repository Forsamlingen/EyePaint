<Window x:Class="EyePaint.PublishWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Background="#AA000000"
        AllowsTransparency="True"
        WindowState="Maximized"
        WindowStyle="None"
        Topmost="True">
  <Grid Name="UploadControls">
    <ProgressBar Name="UploadProgress" Height="10" MaxWidth="300" BorderBrush="White" Background="Black" Foreground="White"/>
    <StackPanel Name="UploadResult" HorizontalAlignment="Center" VerticalAlignment="Center" Background="White">
      <Image Name="UploadQR" Stretch="None"/>
      <TextBlock Name="UploadURL" FontSize="48" TextAlignment="Center"/>
    </StackPanel>
  </Grid>
</Window>
