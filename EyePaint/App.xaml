<Application x:Class="EyePaint.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="FullScreen" TargetType="Window">
            <Setter Property="Background" Value="Black" />
            <Setter Property="Cursor" Value="Cross" />
            <Setter Property="ResizeMode" Value="NoResize" />
            <Setter Property="WindowStyle" Value="None" />
            <Setter Property="WindowState" Value="Maximized" />
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Arial" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="36" />
        </Style>
        <Storyboard x:Key="CountdownStoryboard" x:Name="CountdownStoryboard" Completed="onGazeClick">
            <DoubleAnimation Storyboard.TargetName="CountdownIndicator" Storyboard.TargetProperty="StrokeThickness" To="100" Duration="0:0:2">
                <DoubleAnimation.EasingFunction>
                    <PowerEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        <ControlTemplate x:Key="GazeButton" TargetType="Button">
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="False">
                    <Setter Property="Opacity" Value="0.5" />
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="1" />
                    <Setter Property="FocusManager.FocusedElement" Value="{Binding RelativeSource={RelativeSource Self}}" />
                </Trigger>
                <EventTrigger RoutedEvent="MouseEnter">
                    <BeginStoryboard Name="Animation">
                        <StaticResource ResourceKey="CountdownStoryboard"/>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="PreviewMouseDown">
                    <SeekStoryboard BeginStoryboardName="Animation" Offset="0" Origin="BeginTime" />
                </EventTrigger>
                <EventTrigger RoutedEvent="MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="CountdownIndicator" Storyboard.TargetProperty="StrokeThickness" To="0" />
                        </Storyboard>
                    </BeginStoryboard>
                    <StopStoryboard BeginStoryboardName="Animation" />
                </EventTrigger>
            </ControlTemplate.Triggers>
            <Grid Background="Transparent">
                <Ellipse Fill="{TemplateBinding Background}"/>
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <ContentPresenter Content="{TemplateBinding Content}"/>
                    <TextBlock TextAlignment="Center" Text="{TemplateBinding Tag}" FontSize="18" Foreground="{TemplateBinding Foreground}"/>
                </StackPanel>
                <Ellipse Name="CountdownIndicator" Stroke="Black"/>
            </Grid>
        </ControlTemplate>
    </Application.Resources>
</Application>
