<UserControl 
    x:Class="EyePaint.CalibrationPositioningControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Loaded="onLoaded" KeyDown="onKeyDown">
    <Grid>
        <Ellipse Fill="LightGray" >
            <Ellipse.Effect>
                <BlurEffect x:Name="Blur" RenderingBias="Quality"/>
            </Ellipse.Effect>
        </Ellipse>
        <TextBlock Name="Instructions" FontSize="72" FontFamily="Palatino Linotype" VerticalAlignment="Center" HorizontalAlignment="Center" />
    </Grid>
</UserControl>
