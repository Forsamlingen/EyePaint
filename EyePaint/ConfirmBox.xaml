<Window x:Class="EyePaint.ConfirmBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Topmost="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Name="Message" Content="Test" HorizontalAlignment="Center" />
        <Button Grid.Row="1" Name="Confirm" Content="OK" Width="300" HorizontalAlignment="Center" IsDefault="True" Click="onConfirmClick"/>
    </Grid>
</Window>
