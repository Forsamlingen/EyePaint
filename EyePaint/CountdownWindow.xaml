<Window x:Class="EyePaint.CountdownWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Style="{StaticResource GazeWindow}"
        KeyDown="onCancel"
        Topmost="True"
        AllowsTransparency="True"
        Background="#AA000000">
    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard Name="BeginStoryboard">
                <Storyboard Completed="onConfirm">
                    <StringAnimationUsingKeyFrames Storyboard.TargetName="Countdown" Storyboard.TargetProperty="Text" Duration="0:0:3">
                        <DiscreteStringKeyFrame Value="3" KeyTime="0:0:0" />
                        <DiscreteStringKeyFrame Value="2" KeyTime="0:0:1" />
                        <DiscreteStringKeyFrame Value="1" KeyTime="0:0:2" />
                    </StringAnimationUsingKeyFrames>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
        <EventTrigger RoutedEvent="Window.Unloaded">
            <StopStoryboard BeginStoryboardName="BeginStoryboard"/>
        </EventTrigger>
    </Window.Triggers>
    <Viewbox Margin="200">
        <TextBlock Name="Countdown" Text="0" Foreground="White" FontFamily="Arial" />
    </Viewbox>
</Window>
